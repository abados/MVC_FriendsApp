@model MyFriends.Models.Friend

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.FullName delete</h4>
    @if (@Model.Images.Count > 0 && @Model.Images.First() != null)
    {
        <img src="data:image;base64,@System.Convert.ToBase64String(@Model.Images.First().MyImage)" width="160" height="120" />
    }
    <hr />
   
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
